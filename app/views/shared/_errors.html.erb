<% if obj.errors.any? %>
    <div class='row'>
        <div class='col-xs-8 col-xs-offset-2'>
            <div class='panel panel-danger'>
                <div class='panel-heading'>
                    <h2 class='panel-title'>
                        <%= pluralize(obj.errors.count, 'error')%>
                    </h2>
                </div>
                <div class='panel-body'>
                    <ul>
                    <% obj.errors.full_messages.each { |msg| %>
                        <li> <%= msg %> <li>
                    <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% end%>