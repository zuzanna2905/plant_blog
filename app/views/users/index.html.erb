<div class='center'>
    <h3>All Blog Users</h3>
    <%= will_paginate  %>
    <% @users.each { |user| %>
        <div class='row'>
            <ul class='well user col-md-4 col-md-offset-4'>
                <li><h4><%= link_to gravatar_for(user), user_path(user) %></h4></li>
                <li><h4><%= link_to user.username, user_path(user)%></h4></li>
                <li><h4><%= pluralize(user.articles.count, 'article') if user.articles %></h4></li>   
                <% if logged_in? and current_user.admin? %>
                    <%= link_to "Delete this user", user_path(user), 
                    method: :delete, 
                    data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs'  %> 
                <% end %>
            </ul>
        </div>
    <% }%>
    <%= will_paginate  %>
</div>