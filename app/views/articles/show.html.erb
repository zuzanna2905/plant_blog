<div class='container'>
    <h2 id='title' class='well col-xs-10 col-xs-offset-1'><%= @article.title %></h2>
    <div class='well col-xs-10 col-xs-offset-1 center'>
        <div>
            <p><%= simple_format(@article.description)%></p>
            <hr>
            <%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-success' %>  
            <%= link_to "Delete this article", article_path(@article), 
                method: :delete, 
                data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'  %> 
            <%= link_to "Back to articles listing", articles_path, class: 'btn btn-info' %>
        </div>
    </div>
    <div class='tags col-xs-10 col-xs-offset-1'>
        <ul>Tags:
            <li><a>Home</a></li>
            <li><a>Leaves</a></li>
            <li><a>Water</a></li>
        </ul>
    </div>
</div>