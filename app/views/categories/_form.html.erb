<%= render 'shared/errors', obj: @category%>
<%= form_for(@category, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
<div class='form-group'> 
    <div class='control-label col-sm-2'>
        <%= f.label :name %>
    </div>
    <div class='col-sm-8'>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter category', autofocus: true %>
    </div>
</div>
<div class='form-group'> 
    <div class='col-sm-offset-2 col-sm-10'>
        <%= f.submit(@category.new_record? ? "Add category" : 'Update category', class: 'btn btn-success btn-lg')%>
    </div>
</div>
<% end %>
<div class='col-sm-offset-2'>
    [ <%= link_to "Cancle request and return to categories", categories_path%> ]
</div>